<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/ic_notification_background1"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/show_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/wallet_link_text_light"
            android:textSize="25sp"
            android:layout_marginTop="?android:actionBarSize"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/show_msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Msg"
            android:textColor="@color/colorBlcak"
            android:textSize="20sp"
            android:maxLines="15"
            android:lines="13"
            android:textAlignment="center"
            android:layout_marginTop="?android:actionBarSize"
            android:layout_marginLeft="?android:actionBarSize"
            android:layout_marginRight="?android:actionBarSize"/>
        <Button
            android:id="@+id/show_msg_activityButton"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="@drawable/buttonshape"
            android:text="Click Here"

            android:onClick="activityName_onclick"/>
       <Button
           android:id="@+id/show_msg_share_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="share"
           android:onClick="share_onclick"/>



    </LinearLayout>




</LinearLayout>
